<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:text="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp"
    android:weightSum="4"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/txv_magnitude"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="8.2"
        android:text="@string/magnitude"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/txv_city"
        tools:text="SanFransicio"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/city"
        android:textSize="15sp" />


    <TextView
        android:id="@+id/txv_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginLeft="5dp"
        android:text="@string/data"
        android:textSize="10sp"
        tools:text="29/12/2017" />

    <TextView
        android:id="@+id/txv_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="@string/time"
        android:textSize="10sp"
        tools:text="1:30 AM " />
</LinearLayout>